<div id="post_content">
<h1 class="title">
  <%= @post.title %>
</h1>
<p class="date">
  <small><%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %> |
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago
</small>

</p>

<p class="body">
  <%= @post.body %>
</p>


</div>
